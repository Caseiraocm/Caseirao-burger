let estoque = {
    carne: 100,
    frango: 50,
    bacon: 100,
    ovo: 100,
    cebola: 100,
    queijo: 100,
    presunto: 100,
    cheddar: 100
};

let vendas = [];

function gerarPedido() {
    const hamburguer = document.getElementById("hamburguer").value;
    const adicionais = Array.from(document.querySelectorAll('input[name="adicional"]:checked')).map(el => el.value.split(" - ")[0].toLowerCase()).join(", ");
    const endereco = document.getElementById("endereco").value;
    const pagamento = document.getElementById("pagamento").value;

    // Atualizar Estoque
    adicionais.split(", ").forEach(adicional => {
        if (estoque[adicional] !== undefined) {
            estoque[adicional] -= 1;
        }
    });

    // Registrar a Venda
    const pedido = {
        hamburguer: hamburguer,
        adicionais: adicionais,
        endereco: endereco,
        pagamento: pagamento,
        data: new Date().toLocaleString()
    };
    vendas.push(pedido);

    // Gerar a mensagem para o WhatsApp
    const taxaEntrega = "R$ 5,00 (dentro da cidade), valor a combinar (zona rural)";
    const mensagem = `Pedido: ${hamburguer}\nAdicionais: ${adicionais}\nEndere√ßo: ${endereco}\nForma de Pagamento: ${pagamento}\nTaxa de Entrega: ${taxaEntrega}`;
    const url = `https://wa.me/5586995033988?text=${encodeURIComponent(mensagem)}`;
    window.open(url, '_blank');

    // Exibir Estoque Atualizado (opcional)
    console.log('Estoque atualizado:', estoque);
}

function mostrarVendas() {
    console.table(vendas);
}

function mostrarEstoque() {
    console.table(estoque);
}
